class Solution {
public:
    int mod = 1e9+7;
    int findPower(long long base,long long power) {
        if(power == 0) return 1;
        long long half =  findPower(base,power/2);
        long long result = half*half;
        if(power % 2 == 1) result = result*base;
        return result % mod;
    }
    int countGoodNumbers(long long n) {
        return (long long) findPower(5,(n+1)/2) * findPower(4,n/2)%mod;
    }
};
